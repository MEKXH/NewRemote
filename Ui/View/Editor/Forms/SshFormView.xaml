<UserControl x:Class="_1RM.View.Editor.Forms.SshFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:forms="clr-namespace:_1RM.View.Editor.Forms"
             xmlns:controls="clr-namespace:_1RM.Controls"
             xmlns:s="https://github.com/canton7/Stylet"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance forms:SshFormViewModel}"
             d:DesignHeight="1450" d:DesignWidth="800">
    <StackPanel>
        <!-- 连接信息卡片 (现在包含在HostView中) -->
        <ContentControl s:View.Model="{Binding HostViewModel}"></ContentControl>

        <!-- 认证信息卡片 -->
        <Border Background="{DynamicResource BackgroundBrush}"
                BorderBrush="{DynamicResource DefaultBorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Margin="0 0 0 16">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
            </Border.Effect>
            <StackPanel Margin="20 16">
                <!-- 卡片标题 -->
                <Border Background="{DynamicResource PrimaryLightBrush}"
                        CornerRadius="6"
                        Padding="12 8 12 8"
                        Margin="0 0 0 16">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🔐"
                                   VerticalAlignment="Center"
                                   Margin="0 0 8 0"
                                   FontSize="14"/>
                        <TextBlock Text="认证信息"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>
                    </StackPanel>
                </Border>

                <!-- 认证信息内容 -->
                <ContentControl s:View.Model="{Binding CredentialViewModel}"></ContentControl>
            </StackPanel>
        </Border>

        <!-- 备选认证卡片 -->
        <ContentControl s:View.Model="{Binding AlternativeCredentialListViewModel}">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding AlternativeCredentialListViewModel.Credentials.Count}" Value="0">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>

    </StackPanel>
</UserControl>