<UserControl x:Class="_1RM.View.Editor.Forms.ProtocolBaseWithAddressPortUserPwdFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:_1RM.Controls"
             xmlns:forms="clr-namespace:_1RM.View.Editor.Forms"
             xmlns:s="https://github.com/canton7/Stylet"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance forms:ProtocolBaseWithAddressPortUserPwdFormViewModel}"
             d:DesignHeight="1450" d:DesignWidth="800">
    <StackPanel>
        <!-- 连接信息卡片 (现在包含在HostView中) -->
        <ContentControl s:View.Model="{Binding HostViewModel}"></ContentControl>

        <!-- 紧凑型认证信息卡片 -->
        <Border Background="{DynamicResource BackgroundBrush}"
                BorderBrush="{DynamicResource DefaultBorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Margin="0 0 0 12"
                Padding="0">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.08" ShadowDepth="1" BlurRadius="4"/>
            </Border.Effect>
            <StackPanel Margin="0 0">
                <!-- 紧凑型卡片标题 -->
                <Border Background="{DynamicResource AccentMidBrush}"
                        CornerRadius="8 8 0 0"
                        Padding="16 10 16 10">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="20" Height="20"
                                Background="{DynamicResource AccentTextBrush}"
                                CornerRadius="4"
                                Margin="0 0 10 0">
                            <Path Data="M12,17C10.9,17 10,16.1 10,15C10,13.9 10.9,13 12,13C13.1,13 14,13.9 14,15C14,16.1 13.1,17 12,17M12,20C7.6,20 4,16.4 4,12C4,7.6 7.6,4 12,4C16.4,4 20,7.6 20,12C20,16.4 16.4,20 12,20M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M9,12A6,6 0 0,1 15,6A6,6 0 0,1 21,12A6,6 0 0,1 15,18A6,6 0 0,1 9,12Z"
                                  Fill="{DynamicResource AccentMidBrush}"
                                  Stretch="Uniform"
                                  Margin="5"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="认证信息"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource AccentTextBrush}"/>
                            <TextBlock Text="凭据和安全验证"
                                       FontSize="10"
                                       Opacity="0.8"
                                       Foreground="{DynamicResource AccentTextBrush}"
                                       Margin="0 1 0 0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 认证信息内容 -->
                <Border Background="{DynamicResource BackgroundBrush}"
                        CornerRadius="0 0 8 8"
                        Padding="16 12 16 14">
                    <ContentControl s:View.Model="{Binding CredentialViewModel}"></ContentControl>
                </Border>
            </StackPanel>
        </Border>

        <!-- 备选认证卡片 -->
        <ContentControl s:View.Model="{Binding AlternativeCredentialListViewModel}">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding AlternativeCredentialListViewModel.Credentials.Count}" Value="0">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>

    </StackPanel>
</UserControl>