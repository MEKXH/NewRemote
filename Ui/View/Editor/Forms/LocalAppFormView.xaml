<UserControl x:Class="_1RM.View.Editor.Forms.LocalAppFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:argument="clr-namespace:_1RM.View.Editor.Forms.Argument"
             xmlns:controls="clr-namespace:_1RM.Controls"
             xmlns:forms="clr-namespace:_1RM.View.Editor.Forms"
             xmlns:s="https://github.com/canton7/Stylet"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance forms:LocalAppFormViewModel}"
             d:DesignHeight="1450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- 统一的行头样式，与主页保持一致 -->
        <Style TargetType="TextBlock" x:Key="ConnectionRowHeader" BasedOn="{StaticResource TextBlockBase}">
            <Setter Property="Foreground" Value="{DynamicResource BackgroundTextBrush}"></Setter>
            <Setter Property="MinWidth" Value="140"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="TextAlignment" Value="Right"></Setter>
            <Setter Property="TextWrapping" Value="WrapWithOverflow"></Setter>
            <Setter Property="FontSize" Value="13"></Setter>
            <Setter Property="Margin">
                <Setter.Value>
                    <Thickness Right="24"></Thickness>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="controls:GridWith4Columns">
            <Setter Property="Height" Value="Auto"></Setter>
            <Setter Property="MinHeight" Value="36"></Setter>
            <Setter Property="Margin">
                <Setter.Value>
                    <Thickness Bottom="0" Top="12"></Thickness>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <StackPanel>
        <!-- 紧凑型应用程序路径卡片 -->
        <Border Background="{DynamicResource BackgroundBrush}"
                BorderBrush="{DynamicResource DefaultBorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Margin="0 0 0 12"
                Padding="0">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.08" ShadowDepth="1" BlurRadius="4"/>
            </Border.Effect>
            <StackPanel Margin="0 0">
                <!-- 紧凑型卡片标题 -->
                <Border Background="{DynamicResource AccentMidBrush}"
                        CornerRadius="8 8 0 0"
                        Padding="16 10 16 10">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="20" Height="20"
                                Background="{DynamicResource AccentTextBrush}"
                                CornerRadius="4"
                                Margin="0 0 10 0">
                            <Path Data="M12,3L1,9L12,15L21,10.09V17H23V9M5,13.18V17.18L12,21L19,17.18V13.18L12,17L5,13.18Z"
                                  Fill="{DynamicResource AccentMidBrush}"
                                  Stretch="Uniform"
                                  Margin="5"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="应用程序路径"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource AccentTextBrush}"/>
                            <TextBlock Text="可执行文件配置"
                                       FontSize="10"
                                       Opacity="0.8"
                                       Foreground="{DynamicResource AccentTextBrush}"
                                       Margin="0 1 0 0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 应用程序路径内容 -->
                <Border Background="{DynamicResource BackgroundBrush}"
                        CornerRadius="0 0 8 8"
                        Padding="16 12 16 14">
                    <StackPanel>
                    <!-- 可执行文件路径 -->
                    <controls:GridWith4Columns>
                        <TextBlock Grid.Column="0"
                                   Text="{DynamicResource 'Exe path'}"
                                   Style="{StaticResource ConnectionRowHeader}"/>
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"
                                     Tag="e.g. C:/vnc/viewer.exe or %VNC%/viewer.exe"
                                     LostFocus="TextBoxExePath_OnLostFocus"
                                     Text="{Binding ExePath, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True, ValidatesOnExceptions=True, ValidatesOnNotifyDataErrors=True}"
                                     Height="32"
                                     Padding="8 6"
                                     VerticalAlignment="Center"
                                     Margin="0 0 8 0">
                                <TextBox.Style>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                        <Setter Property="BorderBrush" Value="{DynamicResource DefaultBorderBrush}"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <Button Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Height="32"
                                    Padding="16 8"
                                    Style="{StaticResource ButtonPrimaryStyle}"
                                    Content="{DynamicResource Select}"
                                    Command="{Binding CmdSelectExePath}"/>
                        </Grid>
                    </controls:GridWith4Columns>

                    <!-- 托管设置 -->
                    <controls:GridWith4Columns>
                        <TextBlock Grid.Column="0"
                                   Text="{DynamicResource 'Hosting'}"
                                   Style="{StaticResource ConnectionRowHeader}"/>
                        <CheckBox Grid.Column="1"
                                  IsChecked="{Binding New.RunWithHosting}"
                                  VerticalAlignment="Center"
                                  ToolTip="{DynamicResource 'Hosting this exe in 1 tab view?'}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{DynamicResource 'Caution: some exe can not be hosted in 1Remote.'}"
                                           TextWrapping="Wrap"
                                           FontSize="12"
                                           Opacity="0.8"
                                           Margin="0 0 0 8"/>
                                <TextBlock Text="⚠️"
                                           VerticalAlignment="Center"
                                           FontSize="12"/>
                            </StackPanel>
                            <CheckBox.Style>
                                <Style TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}">
                                    <Setter Property="Foreground" Value="{DynamicResource BackgroundTextBrush}"/>
                                    <Setter Property="FontSize" Value="13"/>
                                </Style>
                            </CheckBox.Style>
                        </CheckBox>
                    </controls:GridWith4Columns>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- 紧凑型连接参数卡片 -->
        <Border Background="{DynamicResource BackgroundBrush}"
                BorderBrush="{DynamicResource DefaultBorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Margin="0 0 0 12"
                Padding="0">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.08" ShadowDepth="1" BlurRadius="4"/>
            </Border.Effect>
            <StackPanel Margin="0 0">
                <!-- 紧凑型卡片标题 -->
                <Border Background="{DynamicResource AccentMidBrush}"
                        CornerRadius="8 8 0 0"
                        Padding="16 10 16 10">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="20" Height="20"
                                Background="{DynamicResource AccentTextBrush}"
                                CornerRadius="4"
                                Margin="0 0 10 0">
                            <Path Data="M3.9,12C5.22,10.43 8.54,7.17 9.5,6.31C9.5,6.31 10.06,5.46 11,5C11.5,4.75 12,4.5 12.5,4.5C12.5,4.5 12.47,5.5 12.5,6C12.5,6 13,6.25 13.5,6.5C14.55,7.18 15.32,7.95 16,8.84C16,8.84 16.5,9.75 16.04,10.5L16.5,11C16.5,11 16,11.5 15.5,12C15.5,12 14.5,12.5 13.5,12.75C12.75,12.88 11.91,13.06 11,13.25V13.5L11.5,14.5C11.5,14.5 10.5,15 9.5,15C5.91,15 3.9,12 3.9,12M14.5,8C14.5,9.66 13.16,11 11.5,11C9.84,11 8.5,9.66 8.5,8C8.5,6.34 9.84,5 11.5,5C13.16,5 14.5,6.34 14.5,8Z"
                                  Fill="{DynamicResource AccentMidBrush}"
                                  Stretch="Uniform"
                                  Margin="5"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="连接参数"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource AccentTextBrush}"/>
                            <TextBlock Text="协议和参数设置"
                                       FontSize="10"
                                       Opacity="0.8"
                                       Foreground="{DynamicResource AccentTextBrush}"
                                       Margin="0 1 0 0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 连接参数内容 -->
                <Border Background="{DynamicResource BackgroundBrush}"
                        CornerRadius="0 0 8 8"
                        Padding="16 12 16 14">
                    <StackPanel>
                    <!-- 协议名称 -->
                    <controls:GridWith4Columns>
                        <TextBlock Grid.Column="0"
                                   Text="{DynamicResource Protocol}"
                                   Style="{StaticResource ConnectionRowHeader}"/>
                        <TextBox Grid.Column="1"
                                 Tag="{DynamicResource Optional}"
                                 Text="{Binding New.AppProtocolDisplayName, UpdateSourceTrigger=PropertyChanged}"
                                 Height="32"
                                 Padding="8 6"
                                 VerticalAlignment="Center">
                            <TextBox.Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                    <Setter Property="BorderBrush" Value="{DynamicResource DefaultBorderBrush}"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </controls:GridWith4Columns>

                    <!-- 参数说明 -->
                    <Border Background="{DynamicResource AccentLightBrush}"
                            CornerRadius="6"
                            Padding="12 8 12 8"
                            Margin="0 16 0 0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💡"
                                       VerticalAlignment="Center"
                                       Margin="0 0 8 0"
                                       FontSize="14"/>
                            <TextBlock TextWrapping="WrapWithOverflow"
                                       VerticalAlignment="Center"
                                       FontSize="12"
                                       Opacity="0.8">
                                <Run Foreground="{DynamicResource BackgroundTextBrush}" Text="使用以下变量传递连接信息到应用程序：" />
                                <LineBreak/>
                                <Run Foreground="{DynamicResource BackgroundTextBrush}" Text="%1RM_HOSTNAME% - 主机名" />
                                <LineBreak/>
                                <Run Foreground="{DynamicResource BackgroundTextBrush}" Text="%1RM_PORT% - 端口号" />
                                <LineBreak/>
                                <Run Foreground="{DynamicResource BackgroundTextBrush}" Text="%1RM_USERNAME% - 用户名" />
                                <LineBreak/>
                                <Run Foreground="{DynamicResource BackgroundTextBrush}" Text="%1RM_PASSWORD% - 密码" />
                                <LineBreak/>
                                <Run Foreground="{DynamicResource BackgroundTextBrush}" Text="%1RM_PRIVATE_KEY_PATH% - 私钥文件路径" />
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- 命令行参数卡片 -->
        <argument:ArgumentListControl Margin="0 0 0 12"/>

    </StackPanel>
</UserControl>