<UserControl x:Class="_1RM.View.Editor.Forms.SftpFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:_1RM.Controls"
             xmlns:forms="clr-namespace:_1RM.View.Editor.Forms"
             xmlns:s="https://github.com/canton7/Stylet"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance forms:SftpFormViewModel}"
             d:DesignHeight="1450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- 统一的行头样式，与主页保持一致 -->
        <Style TargetType="TextBlock" x:Key="ConnectionRowHeader" BasedOn="{StaticResource TextBlockBase}">
            <Setter Property="Foreground" Value="{DynamicResource BackgroundTextBrush}"></Setter>
            <Setter Property="MinWidth" Value="140"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="TextAlignment" Value="Right"></Setter>
            <Setter Property="TextWrapping" Value="WrapWithOverflow"></Setter>
            <Setter Property="FontSize" Value="13"></Setter>
            <Setter Property="Margin">
                <Setter.Value>
                    <Thickness Right="24"></Thickness>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="controls:GridWith4Columns">
            <Setter Property="Height" Value="Auto"></Setter>
            <Setter Property="MinHeight" Value="36"></Setter>
            <Setter Property="Margin">
                <Setter.Value>
                    <Thickness Bottom="0" Top="12"></Thickness>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <StackPanel>
        <!-- 连接信息卡片 (现在包含在HostView中) -->
        <ContentControl s:View.Model="{Binding HostViewModel}"></ContentControl>

        <!-- 紧凑型认证信息卡片 -->
        <Border Background="{DynamicResource BackgroundBrush}"
                BorderBrush="{DynamicResource DefaultBorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Margin="0 0 0 12"
                Padding="0">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.08" ShadowDepth="1" BlurRadius="4"/>
            </Border.Effect>
            <StackPanel Margin="0 0">
                <!-- 紧凑型卡片标题 -->
                <Border Background="{DynamicResource AccentMidBrush}"
                        CornerRadius="8 8 0 0"
                        Padding="16 10 16 10">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="20" Height="20"
                                Background="{DynamicResource AccentTextBrush}"
                                CornerRadius="4"
                                Margin="0 0 10 0">
                            <Path Data="M12,17C10.9,17 10,16.1 10,15C10,13.9 10.9,13 12,13C13.1,13 14,13.9 14,15C14,16.1 13.1,17 12,17M12,20C7.6,20 4,16.4 4,12C4,7.6 7.6,4 12,4C16.4,4 20,7.6 20,12C20,16.4 16.4,20 12,20M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M9,12A6,6 0 0,1 15,6A6,6 0 0,1 21,12A6,6 0 0,1 15,18A6,6 0 0,1 9,12Z"
                                  Fill="{DynamicResource AccentMidBrush}"
                                  Stretch="Uniform"
                                  Margin="5"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="认证信息"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource AccentTextBrush}"/>
                            <TextBlock Text="SFTP密钥和密码"
                                       FontSize="10"
                                       Opacity="0.8"
                                       Foreground="{DynamicResource AccentTextBrush}"
                                       Margin="0 1 0 0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 认证信息内容 -->
                <Border Background="{DynamicResource BackgroundBrush}"
                        CornerRadius="0 0 8 8"
                        Padding="16 12 16 14">
                    <StackPanel>
                        <!-- 使用私钥选项 -->
                        <CheckBox Name="CbUsePrivateKey"
                                  IsChecked="{Binding New.UsePrivateKeyForConnect}"
                                  Content="{DynamicResource 'Use private key'}"
                                  Checked="CbUsePrivateKey_OnChecked"
                                  Unchecked="CbUsePrivateKey_OnChecked"
                                  Margin="0 0 0 12">
                            <CheckBox.Style>
                                <Style TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}">
                                    <Setter Property="Foreground" Value="{DynamicResource BackgroundTextBrush}"/>
                                    <Setter Property="FontSize" Value="13"/>
                                </Style>
                            </CheckBox.Style>
                        </CheckBox>

                        <!-- 密码输入区域 -->
                        <Grid Name="GridPwd" Margin="0">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=CbUsePrivateKey,Path= IsChecked}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                            <controls:GridWith4Columns>
                                <TextBlock Grid.Column="0"
                                           Text="{DynamicResource Password}"
                                           Style="{StaticResource ConnectionRowHeader}"/>
                                <controls:PasswordInput Grid.Column="1"
                                                         Password="{Binding New.Password, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True, ValidatesOnExceptions=True, ValidatesOnNotifyDataErrors=True}"
                                                         Height="32"/>
                            </controls:GridWith4Columns>
                        </Grid>

                        <!-- 私钥设置区域 -->
                        <Grid Name="GridPrivateKey" Margin="0">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=CbUsePrivateKey,Path= IsChecked}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed"></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                            <StackPanel>
                                <controls:GridWith4Columns>
                                    <TextBlock Grid.Column="0"
                                               Text="{DynamicResource 'Private key'}"
                                               Style="{StaticResource ConnectionRowHeader}"/>
                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0"
                                                 Name="TbPrivateKey"
                                                 Text="{Binding New.PrivateKey}"
                                                 Height="32"
                                                 Padding="8 6"
                                                 VerticalAlignment="Center"
                                                 Margin="0 0 8 0">
                                            <TextBox.Style>
                                                <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                                    <Setter Property="BorderBrush" Value="{DynamicResource DefaultBorderBrush}"/>
                                                    <Setter Property="BorderThickness" Value="1"/>
                                                    <Setter Property="Background" Value="Transparent"/>
                                                </Style>
                                            </TextBox.Style>
                                        </TextBox>
                                        <Button Grid.Column="1"
                                                Content="{DynamicResource Select}"
                                                Click="ButtonOpenPrivateKey_OnClick"
                                                Style="{StaticResource ButtonPrimaryStyle}"
                                                Height="32"
                                                Padding="16 8"
                                                VerticalAlignment="Center"/>
                                    </Grid>
                                </controls:GridWith4Columns>

                                <!-- 私钥格式提示 -->
                                <Border Background="{DynamicResource AccentLightBrush}"
                                        CornerRadius="4"
                                        Padding="12 8"
                                        Margin="0 8 0 0">
                                    <StackPanel>
                                        <TextBlock FontSize="11" Opacity="0.9" Foreground="{DynamicResource BackgroundTextBrush}"
                                                   Margin="0 0 0 4">
                                            <Run Text="• "/>
                                            <Run Text="{DynamicResource 'Internal SFTP client: OpenSSH format key only'}"/>
                                        </TextBlock>
                                        <TextBlock FontSize="11" Opacity="0.9" Foreground="{DynamicResource BackgroundTextBrush}">
                                            <Run Text="• "/>
                                            <Run Text="{DynamicResource 'WinSCP: OpenSSH and PuTTY formats supported'}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <!-- 连接时询问密码 -->
                        <CheckBox Content="{DynamicResource 'Ask for password when open connect'}"
                                  IsChecked="{Binding New.AskPasswordWhenConnect}"
                                  Margin="0 12 0 0">
                            <CheckBox.Style>
                                <Style TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}">
                                    <Setter Property="Foreground" Value="{DynamicResource BackgroundTextBrush}"/>
                                    <Setter Property="FontSize" Value="13"/>
                                </Style>
                            </CheckBox.Style>
                        </CheckBox>

                        <!-- 启动路径设置 -->
                        <Grid Margin="0 12 0 0"
                              Visibility="{Binding New.SelectedRunnerIsInternalRunner, Converter={StaticResource ConverterBool2Visible}}">
                            <controls:GridWith4Columns>
                                <TextBlock Grid.Column="0"
                                           Text="{DynamicResource server_editor_advantage_sftp_startup_path}"
                                           Style="{StaticResource ConnectionRowHeader}"/>
                                <TextBox Grid.Column="1"
                                         Text="{Binding New.StartupPath, UpdateSourceTrigger=PropertyChanged}"
                                         Tag="e.g. /home/user/Desktop"
                                         Height="32"
                                         Padding="8 6"
                                         VerticalAlignment="Center">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                            <Setter Property="BorderBrush" Value="{DynamicResource DefaultBorderBrush}"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Setter Property="Background" Value="Transparent"/>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </controls:GridWith4Columns>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- 备选认证卡片 -->
        <ContentControl s:View.Model="{Binding AlternativeCredentialListViewModel}">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding AlternativeCredentialListViewModel.Credentials.Count}" Value="0">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>

    </StackPanel>
</UserControl>
