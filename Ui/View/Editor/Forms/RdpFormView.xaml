<UserControl x:Class="_1RM.View.Editor.Forms.RdpFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:_1RM.Controls"
             xmlns:controls1="clr-namespace:Shawn.Utils.Wpf.Controls;assembly=Shawn.Utils.Wpf"
             xmlns:forms="clr-namespace:_1RM.View.Editor.Forms"
             xmlns:protocol="clr-namespace:_1RM.Model.Protocol"
             xmlns:s="https://github.com/canton7/Stylet"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance forms:RdpFormViewModel}"
             d:DesignHeight="1850" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- 统一的行头样式，与主页保持一致 -->
        <Style TargetType="TextBlock" x:Key="ConnectionRowHeader" BasedOn="{StaticResource TextBlockBase}">
            <Setter Property="Foreground" Value="{DynamicResource BackgroundTextBrush}"></Setter>
            <Setter Property="MinWidth" Value="140"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="TextAlignment" Value="Right"></Setter>
            <Setter Property="TextWrapping" Value="WrapWithOverflow"></Setter>
            <Setter Property="FontSize" Value="13"></Setter>
            <Setter Property="Margin">
                <Setter.Value>
                    <Thickness Right="24"></Thickness>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="controls:GridWith4Columns">
            <Setter Property="Height" Value="Auto"></Setter>
            <Setter Property="MinHeight" Value="36"></Setter>
            <Setter Property="Margin">
                <Setter.Value>
                    <Thickness Bottom="0" Top="12"></Thickness>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 资源转换器 - 暂时移除未使用的转换器 -->
    </UserControl.Resources>
    <StackPanel>
        <!-- 连接信息卡片 (现在包含在HostView中) -->
        <ContentControl s:View.Model="{Binding HostViewModel}"></ContentControl>

        <!-- RDP连接设置 -->
        <StackPanel>
            <!-- 域设置 -->
            <Border Margin="0,0,0,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Domain"
                               VerticalAlignment="Center"
                               FontSize="13" FontWeight="Medium"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>

                    <TextBox Grid.Column="1"
                             Text="{Binding New.Domain, UpdateSourceTrigger=PropertyChanged}"
                             Height="28"
                             VerticalAlignment="Center"
                             Margin="15,0,0,0">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryMidBrush}"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
                                <Setter Property="FontSize" Value="12"/>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </Grid>
            </Border>

            <!-- 负载均衡信息 -->
            <Border Margin="0,0,0,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="LoadBalanceInfo"
                               VerticalAlignment="Center"
                               FontSize="13" FontWeight="Medium"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>

                    <TextBox Grid.Column="1"
                             Text="{Binding New.LoadBalanceInfo, UpdateSourceTrigger=PropertyChanged}"
                             Tag="tsv://MS Terminal Services Plugin.1.Wortell_sLab_Ses"
                             Height="28"
                             VerticalAlignment="Center"
                             Margin="15,0,0,0">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryMidBrush}"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
                                <Setter Property="FontSize" Value="12"/>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </Grid>
            </Border>

            <!-- Separator -->
            <Border Height="1" Background="{DynamicResource PrimaryMidBrush}" Opacity="0.3" Margin="0,0,0,12"/>
        </StackPanel>

        <!-- RDP认证设置 -->
        <StackPanel>
            <!-- 认证信息内容 -->
            <Border Margin="0,0,0,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="认证信息"
                               VerticalAlignment="Center"
                               FontSize="13" FontWeight="Medium"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>

                    <ContentControl Grid.Column="1"
                                    s:View.Model="{Binding CredentialViewModel}"
                                    Margin="15,0,0,0"/>
                </Grid>
            </Border>

            <!-- Separator -->
            <Border Height="1" Background="{DynamicResource PrimaryMidBrush}" Opacity="0.3" Margin="0,0,0,12"/>
        </StackPanel>

            <!-- 备选认证 -->
            <ContentControl s:View.Model="{Binding AlternativeCredentialListViewModel}">
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding AlternativeCredentialListViewModel.Credentials.Count}" Value="0">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>

        </StackPanel>
</UserControl>