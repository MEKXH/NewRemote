<UserControl x:Class="_1RM.View.Editor.Forms.SerialFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:_1RM.Controls"
             xmlns:forms="clr-namespace:_1RM.View.Editor.Forms"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance forms:SerialFormViewModel}"
             d:DesignHeight="1450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- 统一的行头样式，与主页保持一致 -->
        <Style TargetType="TextBlock" x:Key="ConnectionRowHeader" BasedOn="{StaticResource TextBlockBase}">
            <Setter Property="Foreground" Value="{DynamicResource BackgroundTextBrush}"></Setter>
            <Setter Property="MinWidth" Value="140"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="TextAlignment" Value="Right"></Setter>
            <Setter Property="TextWrapping" Value="WrapWithOverflow"></Setter>
            <Setter Property="FontSize" Value="13"></Setter>
            <Setter Property="Margin">
                <Setter.Value>
                    <Thickness Right="24"></Thickness>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="controls:GridWith4Columns">
            <Setter Property="Height" Value="Auto"></Setter>
            <Setter Property="MinHeight" Value="36"></Setter>
            <Setter Property="Margin">
                <Setter.Value>
                    <Thickness Bottom="0" Top="12"></Thickness>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <StackPanel>
        <!-- Serial连接设置卡片 -->
        <Border Background="{DynamicResource BackgroundBrush}"
                BorderBrush="{DynamicResource DefaultBorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Margin="0 0 0 16">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
            </Border.Effect>
            <StackPanel Margin="20 16">
                <!-- 卡片标题 -->
                <Border Background="{DynamicResource PrimaryLightBrush}"
                        CornerRadius="6"
                        Padding="12 8 12 8"
                        Margin="0 0 0 16">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🔌"
                                   VerticalAlignment="Center"
                                   Margin="0 0 8 0"
                                   FontSize="14"/>
                        <TextBlock Text="Serial连接设置"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Serial连接设置内容 -->
                <StackPanel>
                    <!-- 端口和波特率 -->
                    <controls:GridWith4Columns>
                        <TextBlock Grid.Column="0"
                                   Text="Serial port"
                                   Style="{StaticResource ConnectionRowHeader}"/>
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <controls:AutoCompleteComboBox Grid.Column="0"
                                                           Text="{Binding New.SerialPort, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True, ValidatesOnExceptions=True, ValidatesOnNotifyDataErrors=True}"
                                                           Tag="e.g. COM1"
                                                           Selections="{Binding New.SerialPorts, Mode=OneTime}"
                                                           Height="32"
                                                           VerticalAlignment="Center">
                                <controls:AutoCompleteComboBox.Style>
                                    <Style TargetType="controls:AutoCompleteComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                                        <Setter Property="BorderBrush" Value="{DynamicResource DefaultBorderBrush}"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Margin" Value="0 0 12 0"/>
                                    </Style>
                                </controls:AutoCompleteComboBox.Style>
                            </controls:AutoCompleteComboBox>

                            <TextBlock Grid.Column="1"
                                       Text="Speed(bps)"
                                       VerticalAlignment="Center"
                                       Margin="0 0 12 0"
                                       FontSize="13"
                                       FontWeight="Medium"/>
                            <controls:AutoCompleteComboBox Grid.Column="2"
                                                           Text="{Binding New.BitRate, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True, ValidatesOnExceptions=True, ValidatesOnNotifyDataErrors=True}"
                                                           Tag="e.g. 9600"
                                                           Selections="{Binding New.BitRates, Mode=OneTime}"
                                                           MinWidth="120"
                                                           HorizontalAlignment="Left"
                                                           Height="32"
                                                           VerticalAlignment="Center">
                                <controls:AutoCompleteComboBox.Style>
                                    <Style TargetType="controls:AutoCompleteComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                                        <Setter Property="BorderBrush" Value="{DynamicResource DefaultBorderBrush}"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style>
                                </controls:AutoCompleteComboBox.Style>
                            </controls:AutoCompleteComboBox>
                        </Grid>
                    </controls:GridWith4Columns>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Serial高级设置卡片 -->
        <Border Background="{DynamicResource BackgroundBrush}"
                BorderBrush="{DynamicResource DefaultBorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Margin="0 0 0 16">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
            </Border.Effect>
            <StackPanel Margin="20 16">
                <!-- 卡片标题 -->
                <Border Background="{DynamicResource PrimaryLightBrush}"
                        CornerRadius="6"
                        Padding="12 8 12 8"
                        Margin="0 0 0 16">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚙️"
                                   VerticalAlignment="Center"
                                   Margin="0 0 8 0"
                                   FontSize="14"/>
                        <TextBlock Text="Serial高级设置"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Serial高级设置内容 -->
                <StackPanel>
                    <!-- 数据位 -->
                    <controls:GridWith4Columns>
                        <TextBlock Grid.Column="0"
                                   Text="Data bits"
                                   Style="{StaticResource ConnectionRowHeader}"/>
                        <ComboBox Grid.Column="1"
                                  SelectedItem="{Binding New.DataBits}"
                                  ItemsSource="{Binding New.DataBitsCollection}"
                                  Height="32"
                                  VerticalAlignment="Center">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                                    <Setter Property="BorderBrush" Value="{DynamicResource DefaultBorderBrush}"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>
                    </controls:GridWith4Columns>

                    <!-- 停止位 -->
                    <controls:GridWith4Columns>
                        <TextBlock Grid.Column="0"
                                   Text="Stop bits"
                                   Style="{StaticResource ConnectionRowHeader}"/>
                        <ComboBox Grid.Column="1"
                                  SelectedItem="{Binding New.StopBits}"
                                  ItemsSource="{Binding New.StopBitsCollection}"
                                  Height="32"
                                  VerticalAlignment="Center">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                                    <Setter Property="BorderBrush" Value="{DynamicResource DefaultBorderBrush}"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>
                    </controls:GridWith4Columns>

                    <!-- 校验位 -->
                    <controls:GridWith4Columns>
                        <TextBlock Grid.Column="0"
                                   Text="Parity"
                                   Style="{StaticResource ConnectionRowHeader}"/>
                        <ComboBox Grid.Column="1"
                                  SelectedItem="{Binding New.Parity}"
                                  ItemsSource="{Binding New.ParityCollection}"
                                  Height="32"
                                  VerticalAlignment="Center">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                                    <Setter Property="BorderBrush" Value="{DynamicResource DefaultBorderBrush}"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>
                    </controls:GridWith4Columns>

                    <!-- 流控制 -->
                    <controls:GridWith4Columns>
                        <TextBlock Grid.Column="0"
                                   Text="Flow control"
                                   Style="{StaticResource ConnectionRowHeader}"/>
                        <ComboBox Grid.Column="1"
                                  SelectedItem="{Binding New.FlowControl}"
                                  ItemsSource="{Binding New.FlowControlCollection}"
                                  Height="32"
                                  VerticalAlignment="Center">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                                    <Setter Property="BorderBrush" Value="{DynamicResource DefaultBorderBrush}"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>
                    </controls:GridWith4Columns>

                    <!-- KiTTY会话 -->
                    <controls:GridWith4Columns>
                        <TextBlock Grid.Column="0"
                                   Text="KiTTY Session"
                                   Style="{StaticResource ConnectionRowHeader}"/>
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"
                                     Text="{Binding New.ExternalKittySessionConfigPath, UpdateSourceTrigger=PropertyChanged}"
                                     ToolTip="{DynamicResource server_editor_advantage_ssh_startup_auto_kitty_session_tip}"
                                     Tag="{DynamicResource server_editor_advantage_ssh_startup_auto_kitty_session_tip}"
                                     Height="32"
                                     Padding="8 6"
                                     VerticalAlignment="Center"
                                     Margin="0 0 8 0">
                                <TextBox.Style>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                        <Setter Property="BorderBrush" Value="{DynamicResource DefaultBorderBrush}"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <Button Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Height="32"
                                    Padding="16 8"
                                    Style="{StaticResource ButtonPrimaryStyle}"
                                    Content="{DynamicResource Select}"
                                    Click="ButtonSelectSessionConfigFile_OnClick"/>
                        </Grid>
                    </controls:GridWith4Columns>
                </StackPanel>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>