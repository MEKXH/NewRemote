<UserControl x:Class="_1RM.View.Editor.Forms.Utils.HostView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:utils="clr-namespace:_1RM.View.Editor.Forms.Utils"
             xmlns:controls="clr-namespace:_1RM.Controls"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance utils:HostViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- 统一的行头样式，与设置页保持一致 -->
        <Style TargetType="TextBlock" x:Key="RowHeader">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="6 4"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        </Style>
    </UserControl.Resources>

    <!-- 连接信息内容 - 简化设计 -->
    <StackPanel>
        <!-- 分隔线标题 -->
        <TextBlock Text="连接信息"
                   FontSize="13"
                   FontWeight="Medium"
                   Foreground="{DynamicResource PrimaryTextBrush}"
                   Margin="0,0,0,12"
                   Padding="0"/>

        <!-- 主机名 -->
        <Border Margin="0 0 0 12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{DynamicResource Hostname}" Style="{StaticResource RowHeader}"/>
                            <TextBox Grid.Column="1"
                                     Text="{Binding New.Address, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True, ValidatesOnExceptions=True, ValidatesOnNotifyDataErrors=True}"
                                     Tag="e.g. 192.168.0.101"
                                     Height="28"
                                     Padding="6 4"
                                     VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- 端口 -->
                    <Border Margin="0 0 0 12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{DynamicResource Port}" Style="{StaticResource RowHeader}"/>
                            <TextBox Grid.Column="1"
                                     Text="{Binding New.Port, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True, ValidatesOnExceptions=True, ValidatesOnNotifyDataErrors=True}"
                                     MinWidth="120"
                                     Height="28"
                                     Padding="6 4"
                                     VerticalAlignment="Center"
                                     InputMethod.IsInputMethodEnabled="False"
                                     InputScope="Number"/>
                        </Grid>
                    </Border>

                    <!-- 分隔线 -->
                    <Border Height="1" Background="{DynamicResource PrimaryMidBrush}" Opacity="0.3" Margin="0,12,0,12"/>

                    <!-- 连接检测 -->
                    <Border Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text=""
                                       Style="{StaticResource RowHeader}"/>
                            <CheckBox Grid.Column="1"
                                      Content="{DynamicResource 'Check if address is available before connect'}"
                                      IsChecked="{Binding New.IsPingBeforeConnect}"
                                      VerticalAlignment="Center"
                                      Margin="15,0,0,0">
                                <CheckBox.Style>
                                    <Style TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}">
                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                        <Setter Property="FontSize" Value="12"/>
                                    </Style>
                                </CheckBox.Style>
                            </CheckBox>
                        </Grid>
                    </Border>
                </StackPanel>
</UserControl>
