<UserControl x:Class="_1RM.View.Editor.Forms.Utils.HostView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:utils="clr-namespace:_1RM.View.Editor.Forms.Utils"
             xmlns:controls="clr-namespace:_1RM.Controls"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance utils:CredentialViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- 统一的行头样式，与主页保持一致 -->
        <Style TargetType="TextBlock" x:Key="ConnectionRowHeader" BasedOn="{StaticResource TextBlockBase}">
            <Setter Property="Foreground" Value="{DynamicResource BackgroundTextBrush}"></Setter>
            <Setter Property="MinWidth" Value="140"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="TextAlignment" Value="Right"></Setter>
            <Setter Property="TextWrapping" Value="WrapWithOverflow"></Setter>
            <Setter Property="FontSize" Value="13"></Setter>
            <Setter Property="Margin">
                <Setter.Value>
                    <Thickness Right="24"></Thickness>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="controls:GridWith4Columns">
            <Setter Property="Height" Value="Auto"></Setter>
            <Setter Property="MinHeight" Value="36"></Setter>
            <Setter Property="Margin">
                <Setter.Value>
                    <Thickness Bottom="0" Top="12"></Thickness>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- 连接信息卡片 -->
    <Border Background="{DynamicResource BackgroundBrush}"
            BorderBrush="{DynamicResource DefaultBorderBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Margin="0 0 0 16">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
        </Border.Effect>
        <StackPanel Margin="20 16">
            <!-- 卡片标题 -->
            <Border Background="{DynamicResource PrimaryLightBrush}"
                    CornerRadius="6"
                    Padding="12 8 12 8"
                    Margin="0 0 0 16">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🌐"
                               VerticalAlignment="Center"
                               Margin="0 0 8 0"
                               FontSize="14"/>
                    <TextBlock Text="连接信息"
                               FontSize="14"
                               FontWeight="Medium"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                </StackPanel>
            </Border>

            <!-- 主机名和端口 -->
            <controls:GridWith4Columns>
                <TextBlock Grid.Column="0"
                           Text="{DynamicResource Hostname}"
                           Style="{StaticResource ConnectionRowHeader}"/>
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0"
                             Text="{Binding New.Address, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True, ValidatesOnExceptions=True, ValidatesOnNotifyDataErrors=True}"
                             Tag="e.g. 192.168.0.101"
                             VerticalAlignment="Center"
                             Height="32"
                             Padding="8 6">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                <Setter Property="BorderBrush" Value="{DynamicResource DefaultBorderBrush}"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Margin" Value="0 0 12 0"/>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <TextBlock Grid.Column="1"
                               Text="{DynamicResource Port}"
                               VerticalAlignment="Center"
                               Margin="0 0 12 0"
                               FontSize="13"
                               FontWeight="Medium"/>
                    <TextBox Grid.Column="1"
                             Text="{Binding New.Port, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True, ValidatesOnExceptions=True, ValidatesOnNotifyDataErrors=True}"
                             MinWidth="80"
                             VerticalAlignment="Center"
                             Height="32"
                             Padding="8 6"
                             InputMethod.IsInputMethodEnabled="False"
                             InputScope="Number">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                <Setter Property="BorderBrush" Value="{DynamicResource DefaultBorderBrush}"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </Grid>
            </controls:GridWith4Columns>

            <!-- 连接检测 -->
            <controls:GridWith4Columns>
                <TextBlock Grid.Column="0"
                           Text="{DynamicResource 'Availability detection'}"
                           Style="{StaticResource ConnectionRowHeader}"/>
                <CheckBox Grid.Column="1"
                          Content="{DynamicResource 'Check if address is available before connect'}"
                          IsChecked="{Binding New.IsPingBeforeConnect}"
                          VerticalAlignment="Center"
                          Margin="0">
                    <CheckBox.Style>
                        <Style TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}">
                            <Setter Property="Foreground" Value="{DynamicResource BackgroundTextBrush}"/>
                            <Setter Property="FontSize" Value="13"/>
                        </Style>
                    </CheckBox.Style>
                </CheckBox>
            </controls:GridWith4Columns>
        </StackPanel>
    </Border>
</UserControl>
