<UserControl x:Class="_1RM.View.Editor.Forms.Utils.HostView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:utils="clr-namespace:_1RM.View.Editor.Forms.Utils"
             xmlns:controls="clr-namespace:_1RM.Controls"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance utils:HostViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- 统一的行头样式，与设置页保持一致 -->
        <Style TargetType="TextBlock" x:Key="RowHeader">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="6 4"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        </Style>
    </UserControl.Resources>

    <!-- 连接信息卡片 -->
    <Border Background="{DynamicResource BackgroundBrush}"
            BorderBrush="{DynamicResource DefaultBorderBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Margin="0 0 0 12"
            Padding="0">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.08" ShadowDepth="1" BlurRadius="4"/>
        </Border.Effect>
        <StackPanel Margin="0 0">
            <!-- 紧凑型卡片标题 -->
            <Border Background="{DynamicResource AccentMidBrush}"
                    CornerRadius="8 8 0 0"
                    Padding="16 10 16 10">
                <StackPanel Orientation="Horizontal">
                    <Border Width="20" Height="20"
                            Background="{DynamicResource AccentTextBrush}"
                            CornerRadius="4"
                            Margin="0 0 10 0">
                        <Path Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
                              Fill="{DynamicResource AccentMidBrush}"
                              Stretch="Uniform"
                              Margin="5"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="连接信息"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource AccentTextBrush}"/>
                        <TextBlock Text="主机地址和端口配置"
                                   FontSize="10"
                                   Opacity="0.8"
                                   Foreground="{DynamicResource AccentTextBrush}"
                                   Margin="0 1 0 0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 连接信息内容 -->
            <Border Background="{DynamicResource BackgroundBrush}"
                    CornerRadius="0 0 8 8"
                    Padding="16 12 16 14">
                <StackPanel>
                    <!-- 主机名 -->
                    <Border Margin="0 0 0 12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{DynamicResource Hostname}" Style="{StaticResource RowHeader}"/>
                            <TextBox Grid.Column="1"
                                     Text="{Binding New.Address, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True, ValidatesOnExceptions=True, ValidatesOnNotifyDataErrors=True}"
                                     Tag="e.g. 192.168.0.101"
                                     Height="28"
                                     Padding="6 4"
                                     VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- 端口 -->
                    <Border Margin="0 0 0 12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{DynamicResource Port}" Style="{StaticResource RowHeader}"/>
                            <TextBox Grid.Column="1"
                                     Text="{Binding New.Port, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True, ValidatesOnExceptions=True, ValidatesOnNotifyDataErrors=True}"
                                     MinWidth="120"
                                     Height="28"
                                     Padding="6 4"
                                     VerticalAlignment="Center"
                                     InputMethod.IsInputMethodEnabled="False"
                                     InputScope="Number"/>
                        </Grid>
                    </Border>

                    <!-- 连接检测 -->
                    <Border>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox Grid.Column="1"
                                      Content="{DynamicResource 'Check if address is available before connect'}"
                                      IsChecked="{Binding New.IsPingBeforeConnect}"
                                      VerticalAlignment="Center">
                                <CheckBox.Style>
                                    <Style TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}">
                                        <Setter Property="Foreground" Value="{DynamicResource BackgroundTextBrush}"/>
                                        <Setter Property="FontSize" Value="12"/>
                                    </Style>
                                </CheckBox.Style>
                            </CheckBox>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
