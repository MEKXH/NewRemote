                            </StackPanel>
                        </Button>

                        <Button Padding="0 1 0 0" MinWidth="80" MinHeight="25"
                                HorizontalAlignment="Right"
                                Command="{Binding CmdCancel}"
                                Style="{StaticResource ButtonPrimaryStyle}"
                                Content="{DynamicResource Cancel}">
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
