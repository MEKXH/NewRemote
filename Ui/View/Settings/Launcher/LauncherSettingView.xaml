<UserControl x:Class="_1RM.View.Settings.Launcher.LauncherSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:_1RM.View.Settings.Launcher"
             xmlns:service="clr-namespace:_1RM.Service"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:LauncherSettingViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:Key2KeyStringConverter x:Key="Key2KeyStringConverter"></local:Key2KeyStringConverter>
        <local:ConverterHotkeyModifierKeys x:Key="ConverterHotkeyModifierKeys"></local:ConverterHotkeyModifierKeys>
    </UserControl.Resources>
    <Grid Background="{DynamicResource BackgroundBrush}">
        <ScrollViewer Padding="0">
            <StackPanel>

                <!-- Launcher Enable Setting -->
                <Border Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{DynamicResource Launcher}"
                                   VerticalAlignment="Center"
                                   FontSize="13" FontWeight="Medium"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>

                        <CheckBox Grid.Column="1" IsChecked="{Binding LauncherEnabled, Mode=TwoWay}"
                                  Content="{DynamicResource system_options_quick_launcher_enable}"
                                  VerticalAlignment="Center"
                                  FontSize="12"
                                  Margin="15,0,0,0">
                            <CheckBox.Style>
                                <Style TargetType="CheckBox" BasedOn="{StaticResource CheckBoxAccentStyle}">
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                </Style>
                            </CheckBox.Style>
                        </CheckBox>
                    </Grid>
                </Border>

                <!-- Separator -->
                <Border Height="1" Background="{DynamicResource PrimaryMidBrush}" Opacity="0.3" Margin="0,0,0,12"/>

                <!-- Launcher Settings (enabled when launcher is enabled) -->
                <StackPanel IsEnabled="{Binding LauncherEnabled, Mode=OneWay}"
                            Visibility="{Binding LauncherEnabled, Converter={StaticResource ConverterBool2Visible}}">

                    <!-- Hotkey Setting -->
                    <Border Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{DynamicResource system_options_quick_launcher_hotkey}"
                                       VerticalAlignment="Center"
                                       FontSize="13" FontWeight="Medium"
                                       Foreground="{DynamicResource PrimaryTextBrush}"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
                                <ComboBox Width="100"
                                          ItemsSource="{Binding HotkeyModifierKeys}"
                                          SelectedValuePath="Key"
                                          DisplayMemberPath="Value"
                                          SelectedIndex="{Binding LauncherHotKeyModifiers, Converter={StaticResource ConverterHotkeyModifierKeys}}"
                                          Height="28"
                                          Background="{DynamicResource BackgroundBrush}"
                                          BorderThickness="1"
                                          BorderBrush="{DynamicResource PrimaryMidBrush}"
                                          FontSize="12">
                                    <ComboBox.Style>
                                        <Style TargetType="ComboBox" BasedOn="{StaticResource ComboBoxBaseStyle}">
                                            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                        </Style>
                                    </ComboBox.Style>
                                </ComboBox>
                                <TextBlock Text="+" VerticalAlignment="Center" Margin="15,0,0,0"
                                           Foreground="{DynamicResource PrimaryTextBrush}" FontSize="12"/>
                                <TextBox Width="100"
                                         IsReadOnly="True"
                                         IsReadOnlyCaretVisible="False"
                                         IsUndoEnabled="False"
                                         PreviewKeyDown="TextBoxKey_OnPreviewKeyDown"
                                         Text="{Binding LauncherHotKeyKey, Mode=OneWay,Converter={StaticResource Key2KeyStringConverter}}"
                                         Height="28"
                                         Background="{DynamicResource BackgroundBrush}"
                                         BorderThickness="1"
                                         BorderBrush="{DynamicResource PrimaryMidBrush}"
                                         VerticalContentAlignment="Center"
                                         Padding="6,0"
                                         FontSize="12">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox" BasedOn="{StaticResource TextBoxBaseStyle}">
                                            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Separator -->
                    <Border Height="1" Background="{DynamicResource PrimaryMidBrush}" Opacity="0.3" Margin="0,0,0,12"/>

                    <!-- Show Credentials Setting -->
                    <Border Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" VerticalAlignment="Center"
                                       FontSize="13" FontWeight="Medium"
                                       Foreground="{DynamicResource PrimaryTextBrush}"/>

                            <CheckBox Grid.Column="1" IsChecked="{Binding ShowCredentials, Mode=TwoWay}"
                                      Content="{DynamicResource 'Show credentials info'}"
                                      VerticalAlignment="Center"
                                      FontSize="12"
                                      Margin="15,0,0,0">
                                <CheckBox.Style>
                                    <Style TargetType="CheckBox" BasedOn="{StaticResource CheckBoxAccentStyle}">
                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                    </Style>
                                </CheckBox.Style>
                            </CheckBox>
                        </Grid>
                    </Border>

                    <!-- Separator -->
                    <Border Height="1" Background="{DynamicResource PrimaryMidBrush}" Opacity="0.3" Margin="0,0,0,12"/>

                    <!-- Quick Match Providers -->
                    <Border Margin="0,0,0,12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="{DynamicResource system_options_quick_match_providers}"
                                       FontSize="13" FontWeight="Medium"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       VerticalAlignment="Top"
                                       Margin="0,0,0,8"/>

                            <Border Grid.Row="0" Grid.Column="1"
                                    Background="{DynamicResource BackgroundBrush}"
                                    BorderThickness="1"
                                    BorderBrush="{DynamicResource PrimaryMidBrush}"
                                    CornerRadius="4"
                                    Padding="15"
                                    Margin="15,0,0,0"
                                    MaxWidth="650"
                                    VerticalAlignment="Top">
                                <Grid>
                                    <Grid.Resources>
                                        <DataTemplate x:Key="DataTemplateForMatcher" DataType="service:MatchProviderInfo">
                                            <Border Margin="0,0,0,12" Padding="0,0,0,8"
                                                    BorderBrush="{DynamicResource PrimaryMidBrush}"
                                                    BorderThickness="0,0,0,1"
                                                    Opacity="1">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <CheckBox Grid.Row="0" Cursor="Hand" Margin="0,0,0,4"
                                                          IsChecked="{Binding Enabled}"
                                                          IsEnabled="{Binding IsEditable}"
                                                          Content="{Binding Title1}"
                                                          ToolTip="{Binding Title1}"
                                                          FontSize="12"
                                                          VerticalAlignment="Center">
                                                        <CheckBox.Style>
                                                            <Style TargetType="CheckBox" BasedOn="{StaticResource CheckBoxBaseStyle}">
                                                                <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                                                <!-- 使用主题色而不是黑色 -->
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="CheckBox">
                                                                            <StackPanel Orientation="Horizontal">
                                                                                <Border x:Name="CheckBorder"
                                                                                        Width="16" Height="16"
                                                                                        Background="{DynamicResource BackgroundBrush}"
                                                                                        BorderThickness="1"
                                                                                        BorderBrush="{DynamicResource AccentMidBrush}"
                                                                                        CornerRadius="2"
                                                                                        Margin="0,0,8,0"
                                                                                        VerticalAlignment="Center">
                                                                                    <Path x:Name="CheckMark"
                                                                                          Stroke="{DynamicResource AccentTextBrush}"
                                                                                          StrokeThickness="2"
                                                                                          Data="M 2,6 L 6,10 L 14,2"
                                                                                          Visibility="Collapsed"/>
                                                                                </Border>
                                                                                <ContentPresenter Content="{TemplateBinding Content}"
                                                                                                VerticalAlignment="Center"/>
                                                                            </StackPanel>
                                                                            <ControlTemplate.Triggers>
                                                                                <Trigger Property="IsChecked" Value="True">
                                                                                    <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                                                                    <Setter TargetName="CheckBorder" Property="Background" Value="{DynamicResource AccentMidBrush}"/>
                                                                                </Trigger>
                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                    <Setter TargetName="CheckBorder" Property="BorderBrush" Value="{DynamicResource AccentLightBrush}"/>
                                                                                </Trigger>
                                                                            </ControlTemplate.Triggers>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Style>
                                                        </CheckBox.Style>
                                                    </CheckBox>

                                                    <TextBlock Grid.Row="1"
                                                           Text="{Binding Title2}"
                                                           ToolTip="{Binding Title2}"
                                                           FontSize="11"
                                                           Foreground="{DynamicResource PrimaryTextBrush}"
                                                           Opacity="0.8"
                                                           Margin="24,0,0,0"
                                                           TextWrapping="Wrap"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </Grid.Resources>

                                    <ListView Background="Transparent" BorderThickness="0"
                                          ItemsSource="{Binding AvailableMatcherProviders}"
                                          ItemTemplate="{StaticResource DataTemplateForMatcher}"
                                          Margin="-15,-15,-15,-15">
                                        <ListView.Style>
                                            <Style TargetType="ListView">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type ListView}">
                                                            <ScrollViewer x:Name="ScrollViewer" BorderThickness="0" Padding="15">
                                                                <ItemsPresenter/>
                                                            </ScrollViewer>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ListView.Style>
                                        <ListView.Resources>
                                            <Style TargetType="{x:Type ListViewItem}">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type ListViewItem}">
                                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                                <Setter Property="Margin" Value="0"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{x:Null}" />
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="true">
                                                        <Setter Property="Background" Value="{x:Null}" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ListView.Resources>
                                    </ListView>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Separator -->
                    <Border Height="1" Background="{DynamicResource PrimaryMidBrush}" Opacity="0.3" Margin="0,0,0,12"/>

                    <!-- Quick Connect Setting -->
                    <Border Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{DynamicResource 'Quick Connect'}"
                                       VerticalAlignment="Center"
                                       FontSize="13" FontWeight="Medium"
                                       Foreground="{DynamicResource PrimaryTextBrush}"/>

                            <CheckBox Grid.Column="1" IsChecked="{Binding AllowSaveInfoInQuickConnect, Mode=TwoWay}"
                                      Content="{DynamicResource 'Allow Quick Connect to save entered address information'}"
                                      VerticalAlignment="Center"
                                      FontSize="12"
                                      Margin="15,0,0,0">
                                <CheckBox.Style>
                                    <Style TargetType="CheckBox" BasedOn="{StaticResource CheckBoxAccentStyle}">
                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                    </Style>
                                </CheckBox.Style>
                            </CheckBox>
                        </Grid>
                    </Border>

                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
