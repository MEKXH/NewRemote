                                              Fill="{DynamicResource PrimaryTextBrush}" Stretch="Uniform"/>
                                        </MenuItem.Icon>
                                    </MenuItem>

                                </MenuItem>
                            </Menu>

                            <TextBlock VerticalAlignment="Center" Margin="8,0,0,0">
                                <Hyperlink NavigateUri="https://1remote.org/usage/team/team-sharing/" TextDecorations="{x:Null}"
                                           controls:HyperlinkHelper.IsOpenExternal="True"
                                           Foreground="{DynamicResource PrimaryTextBrush}"
                                           FontSize="12">
                                    (?)
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Separator -->
                <Border Height="1" Background="{DynamicResource PrimaryMidBrush}" Opacity="0.3" Margin="0,0,0,12"/>

                <!-- Database List -->
                <Border Background="{DynamicResource BackgroundBrush}"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource PrimaryMidBrush}"
                        CornerRadius="4"
                        Padding="15"
                        Margin="0,0,0,12">

                    <ItemsControl ItemsSource="{Binding SourceConfigs}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,12" Padding="0,0,0,12"
                                        BorderBrush="{DynamicResource PrimaryMidBrush}"
                                        BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Database Status and Name -->
                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                            <!-- Status Button -->
                                            <Button Margin="0,0,8,0"
                                                    Background="Transparent"
                                                    attachProperty:VisionElement.BackgroundAccent="Transparent"
                                                    attachProperty:VisionElement.BackgroundOnMouseDown="Transparent"
                                                    Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:DataSourceView}, Path=DataContext.CmdRefreshDataSource}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="{Binding StatusInfo}"
                                                    Width="24" Height="24">
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource ButtonBarAccentStyle}">
                                                        <Setter Property="Content">
                                                            <Setter.Value>
                                                                <Path Height="16" Width="16" UseLayoutRounding="True" Stretch="Uniform">
                                                                    <Path.Style>
                                                                        <Style TargetType="Path">
                                                                            <Setter Property="Data" Value="{StaticResource GeometryCloudDisconnected}"></Setter>
                                                                            <Setter Property="Fill" Value="Red"></Setter>
                                                                            <Style.Triggers>
                                                                                <MultiDataTrigger>
                                                                                    <MultiDataTrigger.Conditions>
                                                                                        <Condition Binding="{Binding Status}" Value="{x:Static dao:EnumDatabaseStatus.OK}"/>
                                                                                        <Condition Binding="{Binding IsWritable}" Value="True"/>
                                                                                    </MultiDataTrigger.Conditions>
                                                                                    <MultiDataTrigger.Setters>
                                                                                        <Setter Property="Data" Value="{StaticResource GeometryCloudConnected}"></Setter>
                                                                                        <Setter Property="Fill" Value="Green"></Setter>
                                                                                    </MultiDataTrigger.Setters>
                                                                                </MultiDataTrigger>
                                                                                <MultiDataTrigger>
                                                                                    <MultiDataTrigger.Conditions>
                                                                                        <Condition Binding="{Binding Status}" Value="{x:Static dao:EnumDatabaseStatus.OK}"/>
                                                                                        <Condition Binding="{Binding IsWritable}" Value="False"/>
                                                                                    </MultiDataTrigger.Conditions>
                                                                                    <MultiDataTrigger.Setters>
                                                                                        <Setter Property="Data" Value="{StaticResource GeometryCloudConnectedReadonly}"></Setter>
                                                                                        <Setter Property="Fill" Value="Green"></Setter>
                                                                                    </MultiDataTrigger.Setters>
                                                                                </MultiDataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Path.Style>
                                                                </Path>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Content">
                                                                    <Setter.Value>
                                                                        <Grid>
                                                                            <Path Height="16" Width="16" UseLayoutRounding="True" Stretch="Uniform">
                                                                                <Path.Style>
                                                                                    <Style TargetType="Path">
                                                                                        <Setter Property="Data" Value="{StaticResource GeometryRefresh}"></Setter>
                                                                                        <Setter Property="Fill" Value="{DynamicResource BackgroundTextBrush}"></Setter>
                                                                                    </Style>
                                                                                </Path.Style>
                                                                            </Path>
                                                                        </Grid>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>

                                            <!-- Database Name and Type -->
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="{Binding DataSourceName}"
                                                           FontSize="13" FontWeight="Medium"
                                                           Foreground="{DynamicResource PrimaryTextBrush}"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                    <TextBlock Text="{Binding DatabaseType}"
                                                               FontSize="11"
                                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                                               Opacity="0.7"/>
                                                    <TextBlock Text=" (Readonly)"
                                                               FontSize="11"
                                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                                               Opacity="0.7"
                                                               Visibility="{Binding IsWritable, Converter={StaticResource ConverterBool2VisibleInv}}"
                                                               Margin="4,0,0,0"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Action Buttons -->
                                        <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                            <Button Content="{DynamicResource Edit}"
                                                    Command="{Binding Path=DataContext.CmdEdit, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource ButtonAccentStyle}"
                                                    Height="24" Padding="12,0"
                                                    FontSize="11"
                                                    Margin="0,0,8,0"/>
                                            <Button Content="{DynamicResource Delete}"
                                                    Command="{Binding Path=DataContext.CmdDelete, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
                                                    CommandParameter="{Binding}"
                                                    Height="24" Padding="12,0"
                                                    FontSize="11">
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource ButtonAccentStyle}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Path=DataSourceName}" Value="{x:Static dataSource:DataSourceService.LOCAL_DATA_SOURCE_NAME}">
                                                                <Setter Property="IsEnabled" Value="False"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </StackPanel>

                                        <!-- Description -->
                                        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                                                   Text="{Binding Description}"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                                   Opacity="0.6"
                                                   Margin="32,8,0,0"
                                                   TextWrapping="Wrap"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                        <ItemsControl.Template>
                            <ControlTemplate TargetType="ItemsControl">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                    <ItemsPresenter/>
                                </ScrollViewer>
                            </ControlTemplate>
                        </ItemsControl.Template>
                    </ItemsControl>

                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>