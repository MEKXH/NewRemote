                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Separator -->
                <Border Height="1" Background="{DynamicResource PrimaryMidBrush}" Opacity="0.3" Margin="0,0,0,12"/>

                <!-- Log Level -->
                <Border Margin="0,0,0,12">
                    <Grid>
                        <Grid.Resources>
                            <local:ConverterEnumLogLevel x:Key="ConverterEnumLogLevel" />
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{DynamicResource system_options_general_log_level}"
                                   VerticalAlignment="Center"
                                   FontSize="13" FontWeight="Medium"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>

                        <ComboBox Grid.Column="1" HorizontalAlignment="Left"
                                  SelectedIndex="{Binding LogLevel, Converter={StaticResource ConverterEnumLogLevel}}"
                                  Height="28" MinWidth="200"
                                  Margin="15,0,0,0">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox" BasedOn="{StaticResource ComboBoxBaseStyle}">
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryMidBrush}"/>
                                    <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
                                    <Setter Property="FontSize" Value="12"/>
                                </Style>
                            </ComboBox.Style>
                            <ComboBoxItem Content="{DynamicResource system_options_general_log_level_debug}"></ComboBoxItem>
                            <ComboBoxItem Content="{DynamicResource system_options_general_log_level_info}"></ComboBoxItem>
                            <ComboBoxItem Content="{DynamicResource system_options_general_log_level_warning}"></ComboBoxItem>
                        </ComboBox>
                    </Grid>
                </Border>

                <!-- Separator -->
                <Border Height="1" Background="{DynamicResource PrimaryMidBrush}" Opacity="0.3" Margin="0,0,0,12"/>

                <!-- Tab Setting -->
                <Border Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{DynamicResource system_options_general_tab}"
                                   VerticalAlignment="Center"
                                   FontSize="13" FontWeight="Medium"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>

                        <CheckBox Grid.Column="1" IsChecked="{Binding TabWindowCloseButtonOnLeft, Mode=TwoWay}"
                                  Content="{DynamicResource 'Place the close button on the left side to prevent accidental touches'}"
                                  VerticalAlignment="Center"
                                  FontSize="12"
                                  Margin="15,0,0,0">
                            <CheckBox.Style>
                                <Style TargetType="CheckBox" BasedOn="{StaticResource CheckBoxAccentStyle}">
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                </Style>
                            </CheckBox.Style>
                        </CheckBox>
                    </Grid>
                </Border>

                <!-- Separator -->
                <Border Height="1" Background="{DynamicResource PrimaryMidBrush}" Opacity="0.3" Margin="0,0,0,12"/>

                <!-- Check for new version -->
                <Border Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{DynamicResource system_options_general_updates}"
                                   VerticalAlignment="Center"
                                   FontSize="13" FontWeight="Medium"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>

                        <CheckBox Grid.Column="1" IsChecked="{Binding DoNotCheckNewVersion, Mode=TwoWay}"
                                  Content="{DynamicResource 'Do not check for new version'}"
                                  VerticalAlignment="Center"
                                  FontSize="12"
                                  Margin="15,0,0,0">
                            <CheckBox.Style>
                                <Style TargetType="CheckBox" BasedOn="{StaticResource CheckBoxAccentStyle}">
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                </Style>
                            </CheckBox.Style>
                        </CheckBox>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>