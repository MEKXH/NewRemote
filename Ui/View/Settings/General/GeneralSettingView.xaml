<UserControl x:Class="_1RM.View.Settings.General.GeneralSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:_1RM.View.Settings.General"
             xmlns:controls="clr-namespace:Shawn.Utils.Wpf.Controls;assembly=Shawn.Utils.Wpf"
             xmlns:attachProperty="clr-namespace:Shawn.Utils.WpfResources.Theme.AttachProperty;assembly=Shawn.Utils.WpfResources"
             xmlns:utils="clr-namespace:Shawn.Utils;assembly=Shawn.Utils"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:GeneralSettingViewModel}"
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Background="{DynamicResource BackgroundBrush}">
        <ScrollViewer Padding="0">
            <StackPanel>

                <!-- Language Setting -->
                <Border Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{DynamicResource Language}"
                                   VerticalAlignment="Center"
                                   FontSize="13" FontWeight="Medium"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>

                        <ComboBox Grid.Column="1" HorizontalAlignment="Left"
                                  ItemsSource="{Binding Languages}"
                                  SelectedValue="{Binding Language}"
                                  SelectedValuePath="Key"
                                  DisplayMemberPath="Value"
                                  Height="28" MinWidth="200"
                                  Margin="15,0,0,0">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox" BasedOn="{StaticResource ComboBoxBaseStyle}">
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryMidBrush}"/>
                                    <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
                                    <Setter Property="FontSize" Value="12"/>
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>
                    </Grid>
                </Border>

                <!-- Separator -->
                <Border Height="1" Background="{DynamicResource PrimaryMidBrush}" Opacity="0.3" Margin="0,0,0,12"/>

                <!-- Startup Setting -->
                <Border Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{DynamicResource Startup}"
                                   VerticalAlignment="Center"
                                   FontSize="13" FontWeight="Medium"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>

                        <CheckBox Grid.Column="1" IsChecked="{Binding AppStartAutomatically, Mode=TwoWay}"
                                  Content="{DynamicResource 'Run automatically at OS startup'}"
                                  VerticalAlignment="Center"
                                  FontSize="12"
                                  Margin="15,0,0,0">
                            <CheckBox.Style>
                                <Style TargetType="CheckBox" BasedOn="{StaticResource CheckBoxBaseStyle}">
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                    <!-- 使用主题色而不是黑色 -->
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="CheckBox">
                                                <StackPanel Orientation="Horizontal">
                                                    <Border x:Name="CheckBorder"
                                                            Width="16" Height="16"
                                                            Background="{DynamicResource BackgroundBrush}"
                                                            BorderThickness="1"
                                                            BorderBrush="{DynamicResource AccentMidBrush}"
                                                            CornerRadius="2"
                                                            Margin="0,0,8,0"
                                                            VerticalAlignment="Center">
                                                        <Path x:Name="CheckMark"
                                                              Stroke="{DynamicResource AccentTextBrush}"
                                                              StrokeThickness="2"
                                                              Data="M 2,6 L 6,10 L 14,2"
                                                              Visibility="Collapsed"/>
                                                    </Border>
                                                    <ContentPresenter Content="{TemplateBinding Content}"
                                                                    VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                                        <Setter TargetName="CheckBorder" Property="Background" Value="{DynamicResource AccentMidBrush}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="CheckBorder" Property="BorderBrush" Value="{DynamicResource AccentLightBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </CheckBox.Style>
                        </CheckBox>
                    </Grid>
                </Border>

                <!-- Separator -->
                <Border Height="1" Background="{DynamicResource PrimaryMidBrush}" Opacity="0.3" Margin="0,0,0,12"/>

                <!-- Close Button Behavior -->
                <Border Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{DynamicResource Close button behavior}"
                                   VerticalAlignment="Center"
                                   FontSize="13" FontWeight="Medium"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>

                        <ComboBox Grid.Column="1" HorizontalAlignment="Left"
                                  SelectedIndex="{Binding CloseButtonBehavior}"
                                  Height="28" MinWidth="200"
                                  Margin="15,0,0,0">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox" BasedOn="{StaticResource ComboBoxBaseStyle}">
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryMidBrush}"/>
                                    <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
                                    <Setter Property="FontSize" Value="12"/>
                                </Style>
                            </ComboBox.Style>
                            <ComboBoxItem Content="{DynamicResource Exit}"/>
                            <ComboBoxItem Content="{DynamicResource Minimize to system tray}"/>
                        </ComboBox>
                    </Grid>
                </Border>

                <!-- Separator -->
                <Border Height="1" Background="{DynamicResource PrimaryMidBrush}" Opacity="0.3" Margin="0,0,0,12"/>

                <!-- Security Setting -->
                <Border Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{DynamicResource Security}"
                                   VerticalAlignment="Center"
                                   FontSize="13" FontWeight="Medium"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>

                        <CheckBox Grid.Column="1"
                                  Name="CbRequireWindowsPasswordBeforeSensitiveOperation"
                                  PreviewMouseDown="CbRequireWindowsPasswordBeforeSensitiveOperation_OnPreviewMouseDown"
                                  Content="{DynamicResource 'Windows credentials verification is required to view passwords'}"
                                  VerticalAlignment="Center"
                                  FontSize="12"
                                  Margin="15,0,0,0">
                            <CheckBox.Style>
                                <Style TargetType="CheckBox" BasedOn="{StaticResource CheckBoxAccentStyle}">
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                </Style>
                            </CheckBox.Style>
                        </CheckBox>
                    </Grid>
                </Border>

                <!-- Separator -->
                <Border Height="1" Background="{DynamicResource PrimaryMidBrush}" Opacity="0.3" Margin="0,0,0,12"/>

                <!-- Connection Settings -->
                <Border Margin="0,0,0,12">
                    <StackPanel>
                        <!-- Confirm before closing -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{DynamicResource 'Connection'}"
                                       VerticalAlignment="Center"
                                       FontSize="13" FontWeight="Medium"
                                       Foreground="{DynamicResource PrimaryTextBrush}"/>

                            <CheckBox Grid.Column="1" IsChecked="{Binding ConfirmBeforeClosingSession, Mode=TwoWay}"
                                      Content="{DynamicResource 'Confirm before closing'}"
                                      VerticalAlignment="Center"
                                      FontSize="12"
                                      Margin="15,0,0,0">
                                <CheckBox.Style>
                                    <Style TargetType="CheckBox" BasedOn="{StaticResource CheckBoxAccentStyle}">
                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                    </Style>
                                </CheckBox.Style>
                            </CheckBox>
                        </Grid>

                        <!-- Show session icon -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" VerticalAlignment="Center"
                                       FontSize="13" FontWeight="Medium"
                                       Foreground="{DynamicResource PrimaryTextBrush}"/>

                            <CheckBox Grid.Column="1" IsChecked="{Binding ShowSessionIconInSessionWindow, Mode=TwoWay}"
                                      Content="{DynamicResource 'Show current session icon instead of the app icon when connected'}"
                                      VerticalAlignment="Center"
                                      FontSize="12"
                                      Margin="15,0,0,0">
                                <CheckBox.Style>
                                    <Style TargetType="CheckBox" BasedOn="{StaticResource CheckBoxAccentStyle}">
                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                    </Style>
                                </CheckBox.Style>
                            </CheckBox>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Separator -->
                <Border Height="1" Background="{DynamicResource PrimaryMidBrush}" Opacity="0.3" Margin="0,0,0,12"/>

                <!-- Log File Path -->
                <Border Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{DynamicResource system_options_general_log_file_path}"
                                   VerticalAlignment="Center"
                                   FontSize="13" FontWeight="Medium"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="15,0,0,0"
                                    VerticalAlignment="Center">
                            <TextBox Text="{Binding LogPath, Mode=OneWay}"
                                     MaxWidth="400"
                                     HorizontalAlignment="Left"
                                     ToolTip="{Binding LogPath, Mode=OneWay}"
                                     VerticalContentAlignment="Center" IsReadOnly="True"
                                     Height="28" Padding="6,0"
                                     Margin="0,0,8,0"
                                     Background="{DynamicResource BackgroundBrush}"
                                     BorderThickness="1"
                                     BorderBrush="{DynamicResource PrimaryMidBrush}">
                                <TextBox.Style>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource TextBoxBaseStyle}">
                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                        <Setter Property="FontSize" Value="12"/>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <Button ToolTip="{DynamicResource 'Explore to...'}"
                                    Command="{Binding CmdExploreTo}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource ButtonAccentStyle}"
                                    Width="28" Height="28"
                                    Padding="0"
                                    Margin="0">
                                <Path Margin="4"
