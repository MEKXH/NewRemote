<UserControl x:Class="_1RM.View.Settings.Theme.ThemeSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:_1RM.View.Settings.Theme"
             xmlns:colorPickerWpf="clr-namespace:ColorPickerWPF;assembly=Shawn.Utils.Wpf"
             xmlns:controls="clr-namespace:_1RM.Controls"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:ThemeSettingViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="{DynamicResource BackgroundBrush}">
        <ScrollViewer Padding="0">
            <StackPanel>

                <!-- Theme Selection -->
                <Border Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{DynamicResource Theme}"
                                   VerticalAlignment="Center"
                                   FontSize="13" FontWeight="Medium"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="15,0,0,0" VerticalAlignment="Center">
                            <ComboBox ItemsSource="{Binding ThemeList}"
                                      SelectedItem="{Binding ThemeName}"
                                      Height="28" MinWidth="200"
                                      Background="{DynamicResource BackgroundBrush}"
                                      BorderThickness="1"
                                      BorderBrush="{DynamicResource PrimaryMidBrush}"
                                      FontSize="12">
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox" BasedOn="{StaticResource ComboBoxBaseStyle}">
                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                    </Style>
                                </ComboBox.Style>
                            </ComboBox>
                            <Button Command="{Binding CmdResetTheme}"
                                    Content="{DynamicResource Reset}"
                                    Style="{StaticResource ButtonAccentStyle}"
                                    Height="28" Padding="12,0"
                                    Margin="8,0,0,0"
                                    FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Separator -->
                <Border Height="1" Background="{DynamicResource PrimaryMidBrush}" Opacity="0.3" Margin="0,0,0,12"/>

                <!-- Custom Colors -->
                <Border Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Custom}"
                                   FontSize="13" FontWeight="Medium"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   Margin="0,0,0,8"/>

                        <Border Background="{DynamicResource BackgroundBrush}"
                                BorderThickness="1"
                                BorderBrush="{DynamicResource PrimaryMidBrush}"
                                CornerRadius="4"
                                Padding="15"
                                Margin="135,0,0,0"
                                MaxWidth="550"
                                HorizontalAlignment="Left">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <Grid.Resources>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource TextBlockBase}">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                    </Style>
                                    <Style TargetType="{x:Type colorPickerWpf:ColorPickRowPopup}">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="HexVisible" Value="Collapsed"/>
                                        <Setter Property="Width" Value="25"/>
                                        <Setter Property="Height" Value="25"/>
                                    </Style>
                                </Grid.Resources>

                                <!-- Header Row -->
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="{DynamicResource Normal}"/>
                                <TextBlock Grid.Row="0" Grid.Column="3" Text="{DynamicResource Lighter}"/>
                                <TextBlock Grid.Row="0" Grid.Column="4" Text="{DynamicResource Darker}"/>
                                <TextBlock Grid.Row="0" Grid.Column="5" Text="{DynamicResource Font}"/>

                                <!-- Color 1 Row -->
                                <TextBlock Grid.Row="1" Grid.Column="0"
                                           Text="{DynamicResource Color1}"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontSize="12"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource PrimaryTextBrush}"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="Primary"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontSize="10"
                                           Opacity="0.6"/>
                                <colorPickerWpf:ColorPickRowPopup Grid.Row="1" Grid.Column="2" HexColor="{Binding PrimaryMidColor}" />
                                <colorPickerWpf:ColorPickRowPopup Grid.Row="1" Grid.Column="3" HexColor="{Binding PrimaryLightColor}" />
                                <colorPickerWpf:ColorPickRowPopup Grid.Row="1" Grid.Column="4" HexColor="{Binding PrimaryDarkColor}" />
                                <colorPickerWpf:ColorPickRowPopup Grid.Row="1" Grid.Column="5" HexColor="{Binding PrimaryTextColor}" />

                                <!-- Color 2 Row -->
                                <TextBlock Grid.Row="2" Grid.Column="0"
                                           Text="{DynamicResource Color2}"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontSize="12"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource PrimaryTextBrush}"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="Accent"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontSize="10"
                                           Opacity="0.6"/>
                                <colorPickerWpf:ColorPickRowPopup Grid.Row="2" Grid.Column="2" HexColor="{Binding AccentMidColor}" />
                                <colorPickerWpf:ColorPickRowPopup Grid.Row="2" Grid.Column="3" HexColor="{Binding AccentLightColor}" />
                                <colorPickerWpf:ColorPickRowPopup Grid.Row="2" Grid.Column="4" HexColor="{Binding AccentDarkColor}" />
                                <colorPickerWpf:ColorPickRowPopup Grid.Row="2" Grid.Column="5" HexColor="{Binding AccentTextColor}" />

                                <!-- Background Row -->
                                <TextBlock Grid.Row="3" Grid.Column="0"
                                           Text="{DynamicResource Background}"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontSize="12"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource PrimaryTextBrush}"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="BG"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontSize="10"
                                           Opacity="0.6"/>
                                <colorPickerWpf:ColorPickRowPopup Grid.Row="3" Grid.Column="2" HexColor="{Binding BackgroundColor}" />
                                <Grid Grid.Row="3" Grid.Column="3"/>
                                <Grid Grid.Row="3" Grid.Column="4"/>
                                <colorPickerWpf:ColorPickRowPopup Grid.Row="3" Grid.Column="5" HexColor="{Binding BackgroundTextColor}" />
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Separator -->
                <Border Height="1" Background="{DynamicResource PrimaryMidBrush}" Opacity="0.3" Margin="0,0,0,12"/>

                <!-- Font Settings -->
                <Border Margin="0,0,0,12">
                    <StackPanel>
                        <!-- Font Family -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{DynamicResource system_options_theme_font_family}"
                                       VerticalAlignment="Center"
                                       FontSize="13" FontWeight="Medium"
                                       Foreground="{DynamicResource PrimaryTextBrush}"/>

                            <ComboBox Grid.Column="1"
                                      MinWidth="200" HorizontalAlignment="Left"
                                      IsEditable="True" IsTextSearchEnabled="True"
                                      FontFamily="Microsoft YaHei"
                                      ItemsSource="{Binding FontFamilies}"
                                      SelectedItem="{Binding FontFamily}"
                                      Height="28"
                                      Margin="15,0,0,0"
                                      Background="{DynamicResource BackgroundBrush}"
                                      BorderThickness="1"
                                      BorderBrush="{DynamicResource PrimaryMidBrush}"
                                      FontSize="12">
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox" BasedOn="{StaticResource ComboBoxBaseStyle}">
                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                    </Style>
                                </ComboBox.Style>
                                <ComboBox.Resources>
                                    <Style x:Key="YaHeiComboBoxItemStyle" TargetType="ComboBoxItem" BasedOn="{StaticResource ComboBoxItemAccentStyle}">
                                        <Setter Property="FontFamily" Value="Microsoft YaHei"/>
                                    </Style>
                                    <Style TargetType="ComboBox" BasedOn="{StaticResource ComboBoxBaseStyle}">
                                        <Setter Property="FontFamily" Value="Microsoft YaHei"/>
                                        <Setter Property="ItemContainerStyle" Value="{StaticResource YaHeiComboBoxItemStyle}" />
                                    </Style>
                                </ComboBox.Resources>
                            </ComboBox>
                        </Grid>

                        <!-- Font Size -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{DynamicResource system_options_theme_font_size}"
                                       VerticalAlignment="Center"
                                       FontSize="13" FontWeight="Medium"
                                       Foreground="{DynamicResource PrimaryTextBrush}"/>

                            <ComboBox Grid.Column="1"
                                      MinWidth="200" HorizontalAlignment="Left"
                                      IsEditable="False"
                                      SelectedItem="{Binding FontSize}"
                                      ItemsSource="{Binding FontSizeOptions}"
                                      DisplayMemberPath="Name"
                                      FontFamily="Microsoft YaHei"
                                      Height="28"
                                      Margin="15,0,0,0"
                                      Background="{DynamicResource BackgroundBrush}"
                                      BorderThickness="1"
                                      BorderBrush="{DynamicResource PrimaryMidBrush}"
                                      FontSize="12">
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox" BasedOn="{StaticResource ComboBoxBaseStyle}">
                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                    </Style>
                                </ComboBox.Style>
                                <ComboBox.Resources>
                                    <Style x:Key="YaHeiComboBoxItemStyle" TargetType="ComboBoxItem" BasedOn="{StaticResource ComboBoxItemAccentStyle}">
                                        <Setter Property="FontFamily" Value="Microsoft YaHei"/>
                                    </Style>
                                    <Style TargetType="ComboBox" BasedOn="{StaticResource ComboBoxBaseStyle}">
                                        <Setter Property="FontFamily" Value="Microsoft YaHei"/>
                                        <Setter Property="ItemContainerStyle" Value="{StaticResource YaHeiComboBoxItemStyle}" />
                                    </Style>
                                </ComboBox.Resources>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
